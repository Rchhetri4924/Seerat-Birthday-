<script>
  let count = 10;
  const cd = document.getElementById("countdown");
  const content = document.getElementById("content");

  const timer = setInterval(() => {
    count--;
    cd.textContent = count;
    if (count === 0) {
      clearInterval(timer);
      cd.style.display = "none";
      content.classList.remove("hidden");
    }
  }, 1000);
</script>

